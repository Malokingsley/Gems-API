{% layout 'layout.liquid' %}
{% block content %}
  <!-- we need to account for two conditions here -->
  <!-- first, if we have fruits in our array -->
  <!-- second, if there are no fruits in the array -->
    {% if gems.length > 0 %}
      <h2>
    All Gems
    </h2>
      <ul>
        {% for gem in gems %}
          <li>
        {{ Gem.name }}
      </li>
    {% endfor %}
    </ul>
  {% else %}
    <h2>No gems yet... Go create some!</h2>
  {% endif %}
{% endblock %}