{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-sm">
        <form action="/gems" method="POST">
            <fieldset>
                <legend>Create New Gems</legend>
                <label class="form-label">Name:</label>
                <input 
                    type="text" class="form-control" 
                    name="name" placeholder="What kind of gem is it?"
                    required
                >
                <label class="form-label">Color:</label>
                <input 
                    type="color" class="form-control" 
                    name="color" placeholder="What color is the gem?"
                    required
                >
                <label class="form-label">Easy to Find:</label>
                <input 
                    type="checkbox" class="form-check-control" 
                    name="easyToFind"
                >
            </fieldset>
            <input type="submit" class="btn btn-success" value="Create New Gem">
        </form>
    </div>
{% endblock %}